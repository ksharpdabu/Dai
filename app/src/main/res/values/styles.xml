<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@*android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="edittext_style" parent="@*android:style/Widget.EditText">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/edittext_color</item>
        <item name="android:textColorHint">@color/edittext_hint_color</item>
        <item name="android:background">@drawable/register_edittext_border</item>
        <item name="android:paddingLeft">13.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_marginLeft">18.0dip</item>
        <item name="android:layout_marginRight">18.0dip</item>
    </style>
    <style name="base_text_style" parent="@*android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="base_dialog_style" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="dialog_message_style" parent="@style/base_text_style" />
    <style name="progressdialog" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/register</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@drawable/register</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="register">
        <item name="android:padding">15.0dip</item>
    </style>
    <style name="RegisterErrorWarnDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TemplateDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="UpgradeAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="PopupInfoSelect" parent="@style/TemplateDialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="base_textview_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="product_title_style" parent="@style/base_textview_style">
        <item name="android:textSize">@dimen/product_title_size</item>
        <item name="android:textColor">@color/product_title_color</item>
    </style>
    <style name="product_description_style" parent="@style/product_title_style">
        <item name="android:textColor">@color/product_description_color</item>
    </style>
    <style name="product_time_style" parent="@style/base_textview_style">
        <item name="android:textSize">@dimen/product_time_size</item>
        <item name="android:textColor">@color/product_time_color</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top_and_bottom</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_top_and_bottom</item>
    </style>
    <style name="apply_button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_apply_selector</item>
        <item name="android:layout_width">@dimen/apply_button_width</item>
        <item name="android:layout_height">@dimen/apply_button_height</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top_and_bottom</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_top_and_bottom</item>
    </style>
    <style name="visit_home_style" parent="@android:style/Widget.Button">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/button_visithome_selector</item>
        <item name="android:layout_width">80.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_marginLeft">14.0dip</item>
        <item name="android:button">@null</item>
    </style>
    <style name="favorite_button_style">
        <item name="android:background">@drawable/button_favorite_selector</item>
        <item name="android:layout_width">68.0dip</item>
        <item name="android:layout_height">24.0dip</item>
        <item name="android:layout_marginBottom">40.0dip</item>
    </style>
    <style name="dialog_request_product_title" parent="@style/base_textview_style">
        <item name="android:textSize">@dimen/dialog_request_title_font_size</item>
        <item name="android:textColor">#ff333333</item>
    </style>
    <style name="dialog_request_product_message" parent="@style/base_textview_style">
        <item name="android:textSize">@dimen/dialog_request_message_font_size</item>
        <item name="android:textColor">#ff666666</item>
    </style>
    <style name="base_dialog_button_style" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/dialog_request_button_font_size</item>
        <item name="android:textColor">@color/selector_popup_textcolor</item>
        <item name="android:layout_height">@dimen/dialog_request_button_size</item>
        <item name="android:button">@null</item>
    </style>
    <style name="dialog_request_product_left_button" parent="@style/base_dialog_button_style">
        <item name="android:background">@drawable/selector_upgrade_bottom_left_shape</item>
    </style>
    <style name="dialog_request_product_right_button" parent="@style/base_dialog_button_style">
        <item name="android:background">@drawable/selector_upgrade_bottom_right_shape</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />
</resources>
