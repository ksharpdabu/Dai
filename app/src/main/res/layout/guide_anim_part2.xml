<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@id/guide_vehicle_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@id/guide_vehicle_iv_car"
            android:layout_width="@dimen/guide_vehicle_iv_car_width"
            android:layout_height="@dimen/guide_vehicle_iv_car_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/guide_vehicle_iv_margin_top"
            android:src="@drawable/guide_vehicle_car" />

        <TextView
            android:id="@id/guide_vehicle_tv_car"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/guide_vehicle_text_margin_top"
            android:gravity="center_horizontal"
            android:text="我是有车一族"
            android:textColor="@color/guide_vehicle_text"
            android:textSize="@dimen/guide_vehicle_textsize" />

        <ImageView
            android:id="@id/guide_vehicle_iv_bus"
            android:layout_width="@dimen/guide_vehicle_iv_car_width"
            android:layout_height="@dimen/guide_vehicle_iv_car_height"
            android:layout_marginTop="47.0dip"
            android:src="@drawable/guide_vehicle_bus" />

        <TextView
            android:id="@id/guide_vehicle_tv_bus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/guide_vehicle_text_margin_top"
            android:gravity="center_horizontal"
            android:text="我是公交环保人士"
            android:textColor="@color/guide_vehicle_text"
            android:textSize="@dimen/guide_vehicle_textsize" />

        <Button
            android:id="@id/guide_vehicle_iv_back"
            android:layout_width="@dimen/guide_step_btn_width"
            android:layout_height="@dimen/guide_step_btn_height"
            android:layout_marginTop="44.0dip"
            android:background="@drawable/guide_btn_next_step_selector"
            android:text="上一步"
            android:textColor="@color/guide_btn_next_step_text_color"
            android:textSize="@dimen/guide_step_btn_textsize" />
    </LinearLayout>

    <ImageView
        android:id="@id/guide_btn_quite"
        android:layout_width="27.0dip"
        android:layout_height="27.0dip"
        android:layout_marginLeft="22.0dip"
        android:layout_marginTop="30.0dip"
        android:src="@drawable/guide_btn_quite_selector" />
</RelativeLayout>