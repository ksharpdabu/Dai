<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/guide_identity_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@id/identity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="108.0dip"
            android:src="@drawable/guide_worker_id" />

        <TextView
            android:id="@id/identity_type_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.0dip"
            android:layout_marginRight="36.0dip"
            android:layout_marginTop="20.0dip"
            android:text="建议您填写身份证号，这里仅作为信贷经理对您的信息参考。不会作为其他用途。"
            android:textColor="#ff666666"
            android:textSize="14.0sp" />

        <EditText
            android:id="@id/idno_et"
            style="@style/edittext_style"
            android:layout_marginTop="29.0dip"
            android:drawableLeft="@drawable/icon_identity"
            android:hint="请填写您的身份证号（选填）"
            android:inputType="numberDecimal"
            android:maxLength="18" />

        <EditText
            android:id="@id/id_name_et"
            style="@style/edittext_style"
            android:layout_marginTop="13.0dip"
            android:drawableLeft="@drawable/icon_user"
            android:hint="请问您怎么称呼" />
    </LinearLayout>

    <include layout="@layout/guide_submit_button_view" />

    <ImageView
        android:id="@id/guide_btn_quite"
        android:layout_width="27.0dip"
        android:layout_height="27.0dip"
        android:layout_marginLeft="22.0dip"
        android:layout_marginTop="30.0dip"
        android:src="@drawable/guide_btn_quite_selector" />
</RelativeLayout>